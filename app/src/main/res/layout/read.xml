                <Button
                    android:id="@+id/BtnUpdate"
                    android:layout_width="125dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/main_button"
                    android:text="글 수정"
